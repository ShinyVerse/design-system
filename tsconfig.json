{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "typeRoots": ["node_modules/@types", "./types"],

    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "types"]
}
