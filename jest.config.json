{
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["packages/**/*.ts", "packages/**/*.tsx"],
  "coveragePathIgnorePatterns": ["/coverage/", "/lib/", "/dist/", "/build/"],
  "transformIgnorePatterns": ["/node_modules/(?!${esModules})"],
  "moduleNameMapper": {
    "\\.(css)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  }
}
